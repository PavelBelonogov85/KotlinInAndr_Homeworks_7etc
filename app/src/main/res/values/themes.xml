<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Homework_2_resources" parent="Theme.Material3.DayNight"><!--Theme.MaterialComponents.DayNight.DarkActionBar-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="smallButtonsStyle" parent="Widget.Material3.Button.TextButton"><!-- Widget.MaterialComponents.Button.TextButton -->
        <item name="android:textSize">16sp</item>
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>
    <style name="LikeStyle" parent="smallButtonsStyle">
        <item name="iconTint">@color/like_button_tint</item>
    </style>
    <style name="buttonMoreStyle2" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/more_button_tint</item>
        <item name="android:background">@color/more_button_background</item>

        <!-- почему не работает: -->
        <item name="strokeColor">#eeeeee</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>